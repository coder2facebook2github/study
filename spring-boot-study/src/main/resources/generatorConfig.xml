<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE generatorConfiguration
		PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
		"http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">
<generatorConfiguration>

	<!--配置时 修改到项目的 mysql jar 下 指定数据连接驱动jar地址 -->

	<classPathEntry
		location="C:\\Users\\hao\\.m2\\repository\\mysql\\mysql-connector-java\\6.0.6\\mysql-connector-java-6.0.6.jar" />

	<context id="context1" targetRuntime="Mybatis3">
		<commentGenerator>
			<property name="suppressAllComments" value="true" /><!-- 是否取消注释 -->
			<property name="suppressDate" value="false" /> <!-- 是否生成注释代时间戳 -->
		</commentGenerator>
		<!-- jdbc连接 -->
		<jdbcConnection driverClass="com.mysql.cj.jdbc.Driver"
			connectionURL="jdbc:mysql://localhost:3306/spring?useUnicode=true&amp;characterEncoding=utf-8&amp;serverTimezone=UTC&amp;nullCatalogMeansCurrent=true"
			userId="root" password="root" />

		<!-- 配置model的位置 -->
		<javaModelGenerator targetPackage="com.spring.boot.study.model"
			targetProject="src/main/java">
			<property name="trimString" value="true"/>
		</javaModelGenerator>
		<!-- 配置mapper.xml的位置 -->
		<sqlMapGenerator targetPackage="mapper"
						 targetProject="src/main/java">
			<property name="enableSubPackages" value="true" />
		</sqlMapGenerator>

		<!-- DAO 的位置 -->
		<javaClientGenerator targetPackage="com.spring.boot.study.dao.sys"
							 targetProject="src/main/java" type="XMLMAPPER" >
			<property name="enableSubPackags" value="true" />
		</javaClientGenerator>

			<!-- 设置转换的表名 -->
		<table tableName="sys_configurations"
			enableCountByExample="false" domainObjectName="SysConfigurations"
			enableDeleteByExample="false" enableSelectByExample="false"
			enableUpdateByExample="false">
		</table>

	</context>
</generatorConfiguration>
